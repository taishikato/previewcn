{
  "name": "@previewcn/devtools",
  "version": "0.1.12",
  "description": "Embedded devtools for PreviewCN - real-time shadcn/ui theme preview inside your app",
  "keywords": [
    "shadcn",
    "shadcn-ui",
    "theme",
    "preview",
    "devtools",
    "react",
    "tailwind"
  ],
  "license": "MIT",
  "author": "PreviewCN",
  "repository": {
    "type": "git",
    "url": "https://github.com/taishikato/previewcn.git",
    "directory": "packages/devtools"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./dist/styles.css"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": [
    "./dist/styles.css"
  ],
  "scripts": {
    "build": "pnpm build:js && pnpm build:css",
    "build:js": "tsup",
    "build:css": "postcss src/styles.css -o dist/styles.css",
    "dev": "concurrently \"tsup --watch\" \"postcss src/styles.css -o dist/styles.css --watch\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist node_modules",
    "prepublishOnly": "pnpm build",
    "format:write": "prettier --write \"**/*.{ts,tsx,css}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,css}\" --cache"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.8",
    "@types/node": "^22",
    "@types/react": "^19",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "postcss": "^8.5.4",
    "postcss-cli": "^11.0.1",
    "react": "19.2.1",
    "tailwindcss": "^4.1.8",
    "tsup": "^8.5.0",
    "typescript": "^5"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0"
  }
}
